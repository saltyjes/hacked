{% if template != "cart" %}
{% include 'bold-cart' %}
<!-- shopping cart start -->
<div class="cart link-inline header-cart{% if hiddensmall %} mobile-menu-off{% endif %}">
  <div class="dropdown text-right">
    <a class="dropdown-toggle">
      <span class="icon icon-shopping_cart"></span>
      <span class="badge badge--cart bigcounter">{{ cart.item_count }}</span>
    </a>
    <div class="dropdown-menu dropdown-menu--xs-full slide-from-top cart-group-1" role="menu">
      <div class="container">

        <div class="cart__top">{{ 'cart.header.title' | t }}</div>
        <a href="#" class="icon icon-close cart__close"><span>{{ "general.menu.button_close" | t }}</span></a>
        <ul>{% for item in cart.items limit:20 %}{% include 'bold-cart-item' with item %}{% include "menu-cart-item" %}{% endfor %}</ul>

        <div class="cart__top cart_message"{% if cart.item_count > 0 %} style="display:none;"{% endif %}><span>{{ 'cart.header.message' | t }}</span></div>

        <div class="cart__bottom">
          <form>
            <button type="submit" name="checkout" class="btn btn--ys btn-checkout">{{ 'cart.header.checkout' | t }} <span class="icon icon--flippedX icon-reply"></span></button>
          </form>
          <div class="cart__total">{{ 'cart.header.total' | t }} <span class="shopping-cart__total"> {{ bold_cart_total_price | money }}</span></div>
          <a href="/cart" class="btn btn--ys"><span class="icon icon-shopping_basket"></span>{{ 'cart.header.view_cart' | t }}</a>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- shopping cart end -->
{% endif %}